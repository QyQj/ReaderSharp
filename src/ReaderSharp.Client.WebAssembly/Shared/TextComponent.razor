    };


    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            ReadingSettings.ReadingSettingsChanged += OnReadingSettingsChanged;
        }
        base.OnAfterRender(firstRender);
    }

    private void OnReadingSettingsChanged(object source, EventArgs args)
    {
        StateHasChanged();
        LocalStorage.SetItemAsync("ReadingSettings", ReadingSettings);
    }
}

<style>
    .reader-sharp-paragraph {
        font-family: @ReadingSettings.Font.EN;
        font-size: @ReadingSettings._fontSizePX;
        font-weight: @ReadingSettings.FontWeight;
        line-height: @ReadingSettings.LineHeight;
        margin-top: @ReadingSettings._paragraphTopMarginPX;
        margin-bottom: @ReadingSettings._paragraphTopMarginPX;
        text-indent: @ReadingSettings._textIndentEM;
    }

    .reader-sharp-paragraphContainer {
        width: @ReadingSettings._containerWidthPX;
        padding-left: @ReadingSettings._textComponentLeftPaddingPX;
        padding-right: @ReadingSettings._textComponentRightPaddingPX;
        background: @ReadingSettings.BackgroundColor;
        border-left-width: 1px;
        border-right-width: 1px;
        border-style: solid;
        border-color: black;
    }

    .reader-sharp-paragraphContainer-mobile {
        width: auto;
        padding-left: @ReadingSettings._textComponentLeftPaddingPX;
        padding-right: @ReadingSettings._textComponentRightPaddingPX;
        background: @ReadingSettings.BackgroundColor;
        border-left-width: 1px;
        border-right-width: 1px;
        border-style: solid;
        border-color: black;
    }
</style>