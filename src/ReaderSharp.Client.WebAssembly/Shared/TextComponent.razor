@using System.Runtime.CompilerServices
@using Blazored.LocalStorage
@using ReaderSharp.Client.WebAssembly.Pages
@using ReaderSharp.Client.WebAssembly.Models
@inject IJSRuntime JsRuntime
@inject ILocalStorageService LocalStorage

<MudContainer Class="px-0" Style="overflow: scroll">
    @if (Reading.IsMobile)
    {
        <MudContainer Class="d-flex flex-column reader-sharp-paragraphContainer-mobile">
            @for (int i = 0; i < ParagraphList.Count; i++)
            {
                <p class="reader-sharp-paragraph">@ParagraphList[i]</p>
            }
        </MudContainer>
    }
    else
    {
        <MudContainer Class="d-flex flex-column reader-sharp-paragraphContainer">
            @for (int i = 0; i < ParagraphList.Count; i++)
            {
                <p class="reader-sharp-paragraph">@ParagraphList[i]</p>
            }
        </MudContainer>
    }
</MudContainer>



@code
{
    [CascadingParameter(Name = "Reading")]
    public Reading Reading { get; set; }

    [Parameter]
    public ReadingSettings ReadingSettings { get; set; }

    public List<string> ParagraphList = new List<string>
    {
