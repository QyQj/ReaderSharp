<MudPaper Class="reader-sharp-readingToolBar d-flex flex-column">
    <MudIconButton OnClick="ShowAppBar" Icon="@Icons.Material.TwoTone.Menu" />
    <MudIconButton OnClick="HideAppBar" Icon="@Icons.Material.TwoTone.MenuOpen" />
</MudPaper>
@code
{
    [CascadingParameter(Name = "MainLayout")]
    public MainLayout MainLayout { get; set; }

    private void ShowAppBar()
    {
        MainLayout.ShowAppBar();
    }

    private void HideAppBar()
    {
        MainLayout.HideAppBar();
        MainLayout.HideNavMenu();
    }
}
<style>
    .reader-sharp-readingToolBar {
        height: 400px;
        width: auto;
        position: fixed;
    }
</style>